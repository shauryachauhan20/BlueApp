<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/project_dimens_dp16">

    <TextView
        android:id="@+id/pageItemCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/project_dimens_16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/topCharStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/project_dimens_dp8"
        app:layout_constraintStart_toStartOf="@id/pageItemCount"
        app:layout_constraintTop_toBottomOf="@id/pageItemCount" />

</androidx.constraintlayout.widget.ConstraintLayout>