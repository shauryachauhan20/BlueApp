<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.neosofttechtestapp.viewModel.MainViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MainActivity">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/project_dimens_dp1"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".1" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/carouselViewPager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/project_dimens_dp200"
            android:layout_marginHorizontal="@dimen/project_dimens_dp30"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/guideline" />

        <LinearLayout
            android:id="@+id/dotContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/project_dimens_dp8"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/carouselViewPager" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/searchBar"
            android:layout_width="0dp"
            android:layout_height="@dimen/project_dimens_dp35"
            android:layout_marginHorizontal="@dimen/project_dimens_dp5"
            android:layout_marginTop="@dimen/project_dimens_dp15"
            android:background="@drawable/rectangle_gray"
            app:layout_constraintEnd_toEndOf="@id/carouselViewPager"
            app:layout_constraintStart_toStartOf="@id/carouselViewPager"
            app:layout_constraintTop_toBottomOf="@id/dotContainer">

            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="@dimen/project_dimens_dp20"
                android:layout_height="@dimen/project_dimens_dp20"
                android:layout_marginStart="@dimen/project_dimens_dp5"
                android:src="@drawable/search"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="0dp"
                android:layout_height="@dimen/project_dimens_dp20"
                android:layout_marginStart="@dimen/project_dimens_dp5"
                android:background="@android:color/transparent"
                android:hint="@string/search"
                android:textSize="@dimen/project_dimens_14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/searchIcon"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/contentRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/project_dimens_dp15"
            android:layout_marginBottom="@dimen/project_dimens_dp80"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searchBar"
            tools:listitem="@layout/vertical_list_item_layout" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/project_dimens_dp30"
            android:layout_marginBottom="@dimen/project_dimens_dp70"
            android:contentDescription="@string/statistics"
            android:src="@mipmap/ic_launcher_round"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>